<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.metodista.pap.ssm.NovaTemporadaActivity">

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:id="@+id/tempRnkLogo"
        android:src="@drawable/logo"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tempRnkTexto"
        android:layout_below="@+id/tempRnkLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/temp_rnk_texto"
        android:textSize="15sp"
        android:textColor="@color/texto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/tempRnkBtnEncerrar"
        android:layout_below="@+id/tempRnkTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_rnk_encerrar"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:onClick="cadastrarTemporada"/>

    <ListView
        android:id="@+id/tempRnkList"
        android:layout_below="@id/tempRnkBtnEncerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>